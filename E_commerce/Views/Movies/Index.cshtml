@model IEnumerable<Movie>
@{
    ViewData["title"] = "List Movies ";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(p=>p.ImageURL)</th>
                    <th>@Html.DisplayNameFor(p => p.Name)</th>
                    <th>@Html.DisplayNameFor(p=>p.Description)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class=" align-middle m-3">
                            <img class="rounded-circle" src="@item.ImageURL"
                                 alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class=" align-middle m-3">
                            @Html.DisplayFor(p => @item.Name)
                        </td>
                        <td class=" align-middle m-3">
                            @Html.DisplayFor(p=>item.Description)
                        </td>

                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>
