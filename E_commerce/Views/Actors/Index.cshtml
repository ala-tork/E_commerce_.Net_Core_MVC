@*definde model*@
@model IEnumerable<Actor>

@*Definde ViewDat el data eli n7eb naficheha *@

@{
    ViewData["Title"] = "List Of Actors";
}

@*write code*@
<div class="row mt-4">
    <div class="col-md-9 offset-md-2">
        <table class="table" >
            <thead >
                <tr class="text-center">
                     @*na9ra 2sami el table ml model 5ater 3malt fehom Display[(Name="2sm")]*@
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody >
                @*parcour le Data dans le base de donnees*@
                @foreach(var item in Model)
                {
                    <tr>
                        <td class=" align-middle m-3" >
                            <img class="rounded-circle" src="@item.ProfilePictureURL" 
                                alt="@item.FullName" style="max-width:150px" />
                        </td>
                        <td class=" align-middle">
                            @Html.DisplayFor(m=>item.FullName)
                        </td>
                        <td class=" align-middle">
                            @Html.DisplayFor(m=>item.Bio)
                        </td>
                        <td class=" align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>